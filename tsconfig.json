{
	"compilerOptions": {
		// Output
		"target": "es2022",
		"module": "ESNext",
		"esModuleInterop": true,
		"moduleResolution": "node",

		// Linting rules
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noImplicitOverride": true,
	    "exactOptionalPropertyTypes": true,
		"skipLibCheck": true,

		// Types
		"types": ["vite/client"]
	}
}
